<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>

<h3>See your old Searches:</h3>
  <% @requests.each do |request| %>
  <p>
    <b><%= request.created_at.strftime(" %Y : %e %b ") %></b>
    <br>
    <%= request.duration %> min to kill at: <%= request.lat %> lat, <%= request.lon %> lon
  </p>
  <% end %>

<h3>Activites you did:</h3>

<% @requests.each do |request| %>
  <% request.activities.each do |activity| %>
    <% if activity.done %>
      <b><%= activity.created_at.strftime(" %Y : %e %b ") %></b>
      <h4>
        -<%= activity.name %>
      </h2>
      <p>
        <b>at:</b> <%= activity.location %>
      </p>
    <% end %>
  <% end %>
<% end %>
