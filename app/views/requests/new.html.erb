<h1>Nouvelle demande</h1>

<%= form_with(model: @request, url: requests_path) do |form| %>
  <div class="form-group row">
    <div class="col-12 col-md-4">
      <%= form.label :hours, "Heures" %>
      <%= form.number_field :hours, step: 1, min: 0, placeholder: "Heures", class: "form-control" %>
    </div>
    <div class="col-12 col-md-4">
      <%= form.label :minutes, "Minutes" %>
      <%= form.number_field :minutes, step: 1, min: 0, max: 59, placeholder: "Minutes", class: "form-control" %>
    </div>
    <div class="col-12 col-md-4">
      <%= form.submit "search" %>
  </div>

<% end %>
