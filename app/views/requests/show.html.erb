
<div class="navbar-custom justify-content-between">
  <%= link_to root_path, class: "profile-link" do %>
    <i class="fa-solid fa-house profile-icon"></i>
  <% end %>
  <div class="d-flex">
    <i class="fa-solid fa-list-ul profile-icon me-2"></i>
    <i class="fa-solid fa-map-location-dot profile-icon ms-2"></i>
  </div>
    <i class="fa-solid fa-magnifying-glass-plus profile-icon"></i>
</div>


<div class="container container-purple pt-5">
  <div class="row row-cols-1 row-cols-md-2 g-1 mb-3">
    <% @request.activities.each do |activity| %>
      <%= render "activity", activity: activity %>
    <% end %>
  </div>

  <div class="map my-2" style="width: 100%; height: 90vh; margin: 0 auto;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
