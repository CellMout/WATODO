<div class="card-header text-center bg-purple text-white rounded shadow">
  <div class="card-header text-center text-white rounded" style="background-color:rgb(117, 33, 177);">
    <h2 class="h5 m-0"><%= activity.name %></h2>
  </div>
  <div class="card-body">
    <p class="card-text text-muted mb-2">
      <i class="bi bi-geo-alt-fill text-danger"></i> <%= activity.location %>
    </p>

  </div>

</div>
<p data-controller="doitbutton" data-doitbutton-gmaps-value=<%= activity.gmaps_params %> >
   <%= link_to "Do it!", activity_path(activity), data: { 'turbo-method': :patch, action: "doitbutton#send", doitbutton_target: "link" }, class: "custom-btn"%>
  </p>
