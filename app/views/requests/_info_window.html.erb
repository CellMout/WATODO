  <div class="card-header text-center text-black rounded">
    <h2 class="h5 m-0">
         <%= activity.name %>

      </h2>
  </div>


  <div class="card-body-1 d-flex flex-column justify-content-between">
    <p class="card-text text-muted mb-2">
      <i class="bi bi-geo-alt-fill text-danger"></i> <%= activity.location %>
    </p>
  </div>
<p data-controller=" doitbutton" data-doitbutton-gmaps-value=<%= activity.gmaps_params %> class="d-flex justify-content-end  mb-0" >

   <%= link_to  activity_path(activity), data: { 'turbo-method': :patch, action: "doitbutton#send", doitbutton_target: "link" }, class: "custom-btn" do %>
   <i class="fa-solid fa-location-arrow"></i>
  <% end %>
</p>
